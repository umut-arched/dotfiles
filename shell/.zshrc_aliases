alias ls='ls --color=auto'

alias backup="dfs; dump; ga; gcd; gp"
alias dump="dpkg --get-selections | awk '{print $1}' > packages.txt"
alias ga="git add ."
alias gb="git branch -a"
alias gp="git push"
alias gl="git log --graph --all --oneline --abbrev-commit"
alias gc="git commit -m"
alias gcd="git commit -m '$(date)'"
alias gco="git checkout"
alias dfs="cd ~/.dotfiles"
alias winget="winget.exe"
alias "winget install -h"="winget install -h --accept-package-agreements"
alias "winget install"="winget install -i"

alias sd="shutdown.exe /s /t 0"

alias spring_run="mvn spring-boot:run"
alias mvn_generate="mvn archetype:generate -DarchetypeArtifactId=maven-archetype-quickstart"
alias mvn_dependency="mvn dependency:resolve"
